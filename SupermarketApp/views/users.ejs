<%- include('partials/navbar', { user: user }) %>

<div class="container mt-4">
    <h2>All Users</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>

        <tbody>
            <% users.forEach(u => { %>
            <tr>
                <td><%= u.id %></td>
                <td><%= u.username %></td>
                <td><%= u.email %></td>
                <td><%= u.role %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>