<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

<body>

<!-- Flash Messages -->
<div class="container mt-3">

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
      <% errors.forEach(err => { %>
        <p><%= err %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (messages && messages.length > 0) { %>
    <div class="alert alert-success">
      <% messages.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

</div>


<!-- Navbar -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/shopping">Supermarket App</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="userNavbar">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
        <li class="nav-item"><a class="nav-link" href="/orders">My Orders</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Cart Content -->
<div class="container">
  <h2 class="mt-4">Shopping Cart</h2>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>

  <% } else { %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Image</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>

      <tbody>
        <% let total = 0; %>
        <% for (let i = 0; i < cart.length; i++) { %>
          <tr>
            <td><%= cart[i].productName %></td>
            <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
            <td><%= cart[i].quantity %></td>
            <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
          </tr>

          <% total += cart[i].price * cart[i].quantity; %>
        <% } %>
      </tbody>
    </table>

    <h4>Total: $<%= total.toFixed(2) %></h4>

    <div class="mt-4">
      <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
    </div>

  <% } %>

</div>

</body>
</html>
