<!DOCTYPE html>
<html>
<head>
    <title>User Feedback</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background: #f8f9fa; }
        .container-box {
            margin-top: 40px;
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        }
    </style>
</head>

<body>

<%- include('partials/navbar', { user: user }) %>

<div class="container container-box">

    <h2 class="mb-4 text-center">User Feedback</h2>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Reply</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% feedback.forEach(f => { %>
                <tr>
                    <td><%= f.username %></td>
                    <td><%= f.email %></td>
                    <td><%= f.subject %></td>
                    <td><%= f.message %></td>
                    <td><%= f.admin_reply || "No reply yet" %></td>
                    <td><%= f.created_at %></td>

                    <td>
                        <!-- Delete button -->
                        <form action="/admin/feedback/delete/<%= f.id %>" method="POST" style="display:inline;">
                            <button class="btn btn-danger btn-sm" onclick="return confirm('Delete feedback?')">Delete</button>
                        </form>

                        <!-- Reply Button triggers modal -->
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#replyModal<%= f.id %>">
                            Reply
                        </button>

                        <!-- Reply Modal -->
                        <div class="modal fade" id="replyModal<%= f.id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    
                                    <div class="modal-header">
                                        <h5 class="modal-title">Reply to <%= f.username %></h5>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <form action="/admin/feedback/reply/<%= f.id %>" method="POST">
                                        <div class="modal-body">
                                            <textarea class="form-control" name="reply" rows="4" required><%= f.admin_reply || "" %></textarea>
                                        </div>

                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button class="btn btn-primary">Send Reply</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

