<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/shopping">Supermarket App</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="userNavbar">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
        <li class="nav-item"><a class="nav-link active" href="/orders">My Orders</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="page-card">

    <h2 class="mb-3">My Orders</h2>
    <% if (user) { %>
      <p class="text-muted mb-4">Welcome, <%= user.username || user.name || 'User' %></p>
    <% } %>

    <!-- Messages -->
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(e){ %>
          <div><%= e %></div>
        <% }) %>
      </div>
    <% } %>

    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(m){ %>
          <div><%= m %></div>
        <% }) %>
      </div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <p>You have no orders yet.</p>
      <a href="/shopping" class="btn btn-primary mt-3">Start shopping</a>
    <% } else { %>
      <table class="table table-hover mt-3">
        <thead>
          <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>User</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(o){ %>
            <tr>
              <td>#<%= o.orderId %></td>
              <td><%= o.orderDate ? new Date(o.orderDate).toLocaleString() : '' %></td>
              <td>$<%= Number(o.totalAmount || 0).toFixed(2) %></td>
              <td>
                <span class="badge <%= o.status === 'PLACED' ? 'bg-warning text-dark' : 'bg-success' %>">
                  <%= o.status %>
                </span>
              </td>
              <td><%= o.userName || '' %></td>
              <td>
                <a href="/order/<%= o.orderId %>" class="btn btn-sm btn-outline-primary">
                  View
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

  </div>
</div>

</body>
</html>
