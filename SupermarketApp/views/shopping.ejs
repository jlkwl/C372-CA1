<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand" href="/shopping">Supermarket App</a>

      <!-- Mobile toggle -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Right-side links -->
      <div class="collapse navbar-collapse" id="userNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">My Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

    <!-- Flash messages -->
    <% if (typeof messages !== 'undefined' && messages.error && messages.error.length) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(e){ %>
          <div><%= e %></div>
        <% }) %>
      </div>
    <% } %>

    <% if (typeof messages !== 'undefined' && messages.success && messages.success.length) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(m){ %>
          <div><%= m %></div>
        <% }) %>
      </div>
    <% } %>

    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="200">Product Name</th>
          <th width="150">Product Image</th>
          <th width="80">Quantity</th>
          <th width="80">Price</th>
          <th width="80">Quantity to Buy</th>
          <th width="80">Buy</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < products.length; i++) { 
             const p = products[i];
             const outOfStock = p.quantity <= 0;
        %>
          <tr class="<%= outOfStock ? 'table-secondary' : '' %>">
            <td>
              <a href="/product/<%= p.id %>"><%= p.productName %></a>
            </td>
            <td>
              <img src="/images/<%= p.image %>" style="width:60px;">
            </td>
            <td><%= p.quantity %></td>
            <td>$<%= p.price.toFixed(2) %></td>

            <!-- Quantity select / out-of-stock label -->
            <td>
              <% if (outOfStock) { %>
                <span class="text-danger fw-bold">Out of stock</span>
              <% } else { %>
                <select class="form-control"
                        onchange="document.getElementById('quantity-<%= p.id %>').value = this.value">
                  <% for (let q = 1; q <= 10; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              <% } %>
            </td>

            <!-- Buy button / disabled when out of stock -->
            <td>
              <% if (outOfStock) { %>
                <button class="btn btn-secondary" disabled>Buy</button>
              <% } else { %>
                <form action="/add-to-cart/<%= p.id %>" method="POST">
                  <input type="hidden" name="quantity" id="quantity-<%= p.id %>" value="1">
                  <button type="submit" class="btn btn-primary mt-1">Buy</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
