<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Checkout</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { background:#f7f7f7; font-family: Arial, Helvetica, sans-serif; }
    .wrap {
      max-width: 980px; margin: 30px auto; background:#fff;
      border-radius: 14px; box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      padding: 24px;
    }
    .invoice-title { font-size: 28px; font-weight: 800; margin-bottom: 6px; }
    .muted { color:#666; }
    .card-soft {
      background:#fafafa; border: 1px solid #eee; border-radius: 12px; padding: 16px;
    }
    .paypal-box {
      background: #fff7e6;
      border: 1px solid #ffe1a8;
      border-radius: 12px;
      padding: 16px;
    }
    .btn-back { background:#777; color:#fff; border:none; border-radius:10px; padding:10px 14px; text-decoration:none; display:inline-block; }
    .btn-back:hover { background:#555; color:#fff; }
  </style>
</head>
<body>
  <%- include('partials/header', { user: user }) %>

  <div class="wrap">
    <div class="d-flex justify-content-between align-items-start flex-wrap">
      <div>
        <div class="invoice-title">Supermarket Invoice</div>
        <div class="muted">Review your items and choose a payment method.</div>
      </div>
      <div class="text-end muted">
        <div><strong>Customer:</strong> <%= user?.email || user?.username || "User" %></div>
        <div><strong>Date:</strong> <%= new Date().toLocaleDateString() %></div>
      </div>
    </div>

    <hr>

    <div class="card-soft">
      <table class="table align-middle mb-0">
        <thead>
          <tr>
            <th>Product</th>
            <th class="text-end">Unit Price</th>
            <th class="text-center">Qty</th>
            <th class="text-end">Line Total</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(function(item){ %>
            <tr>
              <td><strong><%= item.productName %></strong></td>
              <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
              <td class="text-center"><%= item.quantity %></td>
              <td class="text-end">$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="text-end mt-3">
        <div class="fs-5"><strong>Total:</strong> $<span id="grandTotal"><%= Number(total).toFixed(2) %></span></div>
      </div>
    </div>

    <hr>

    <div class="row g-3">
      <div class="col-lg-5">
        <label class="form-label"><strong>Payment Method</strong></label>
        <select id="paymentMethod" class="form-select">
          <option value="stripe">Credit/Debit Card (Stripe)</option>
          <option value="paypal">PayPal</option>
          <option value="bank">Bank Transfer</option>
        </select>

        <div class="muted mt-2">
          Choose a method to display the payment option.
        </div>
      </div>

      <div class="col-lg-7">
        <!-- Stripe placeholder -->
        <div id="stripePanel" class="card-soft">
          <div class="fw-bold mb-2">Secure Stripe Payment</div>
          <div class="muted">Stripe UI goes here (if you implement it).</div>
        </div>

        <!-- PayPal -->
        <div id="paypalPanel" class="paypal-box" style="display:none;">
          <div class="fw-bold mb-2">Pay with PayPal</div>
          <div class="muted mb-3">Sandbox testing uses your PayPal sandbox buyer account.</div>
          <div id="paypal-button-container"></div>
          <div id="paypalMsg" class="mt-2 muted"></div>
        </div>

        <!-- Bank placeholder -->
        <div id="bankPanel" class="card-soft" style="display:none;">
          <div class="fw-bold mb-2">Bank Transfer</div>
          <div class="muted">Instructions for bank transfer go here.</div>
        </div>

        <div class="mt-3">
          <a href="/cart" class="btn-back">Back to Cart</a>
        </div>
      </div>
    </div>
  </div>

  <!-- PayPal SDK -->
  <script src="https://www.paypal.com/sdk/js?client-id=<%= PAYPAL_CLIENT_ID %>&currency=SGD"></script>

  <script>
    const methodEl = document.getElementById('paymentMethod');
    const stripePanel = document.getElementById('stripePanel');
    const paypalPanel = document.getElementById('paypalPanel');
    const bankPanel = document.getElementById('bankPanel');
    const paypalMsg = document.getElementById('paypalMsg');

    function showPanel(method) {
      stripePanel.style.display = (method === 'stripe') ? 'block' : 'none';
      paypalPanel.style.display = (method === 'paypal') ? 'block' : 'none';
      bankPanel.style.display = (method === 'bank') ? 'block' : 'none';
    }

    methodEl.addEventListener('change', () => showPanel(methodEl.value));
    showPanel(methodEl.value);

    // Render PayPal Buttons
    if (window.paypal) {
      paypal.Buttons({
        createOrder: async function() {
          paypalMsg.textContent = "Creating PayPal order...";
          const res = await fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: { 'content-type': 'application/json' }
          });
          const data = await res.json();
          if (!res.ok) throw new Error(data.error || 'Failed to create order');
          paypalMsg.textContent = "";
          return data.id;
        },

        onApprove: async function(data) {
          paypalMsg.textContent = "Capturing payment...";
          const res = await fetch('/api/paypal/capture-order', {
            method: 'POST',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({ orderID: data.orderID })
          });
          const result = await res.json();
          if (!res.ok) throw new Error(result.error || 'Capture failed');

          paypalMsg.textContent = "Payment successful! Redirecting...";
          window.location.href = '/paypal/success';
        },

        onError: function(err) {
          console.error(err);
          paypalMsg.textContent = "PayPal error. Please try again.";
          alert("PayPal error. Please try again.");
        }
      }).render('#paypal-button-container');
    } else {
      console.error("PayPal SDK failed to load.");
    }
  </script>
</body>
</html>
