<%- include('partials/navbar', { user: user }) %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Inventory (Admin)</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f7f7f7;
        }
        .product-card {
            border-radius: 12px;
            background: white;
            padding: 20px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            transition: 0.2s ease;
        }
        .product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.12);
        }
        .product-img {
            height: 160px;
            object-fit: contain;
            margin-bottom: 15px;
        }
        .price-tag {
            font-size: 18px;
            font-weight: bold;
            margin-top: 5px;
        }
        .btn-edit {
            width: 100%;
            background: #0066cc;
            color: white;
        }
        .btn-delete {
            width: 100%;
            background: #cc0000;
            color: white;
        }
        .badge-stock {
            background: #28a745;
        }
    </style>
</head>

<body>

<div class="container mt-5">
    <h2 class="text-center mb-4">Products from Supermarket App Database</h2>

    <div class="row g-4">

        <% products.forEach(p => { %>
            <div class="col-md-4 col-lg-3">
                <div class="product-card">

                    <!-- Product Image -->
                    <img src="/images/<%= p.image %>" class="img-fluid product-img">

                    <!-- Name -->
                    <h5 class="fw-bold"><%= p.productName %></h5>

                    <!-- Quantity -->
                    <span class="badge badge-stock">Stock: <%= p.quantity %></span>

                    <!-- Price -->
                    <p class="price-tag">$<%= p.price.toFixed(2) %></p>

                    <!-- Buttons -->
                    <a href="/updateProduct/<%= p.id %>" class="btn btn-edit mb-2">Edit</a>

                    <a href="/deleteProduct/<%= p.id %>" 
                       class="btn btn-delete"
                       onclick="return confirm('Are you sure you want to delete this product?')">
                       Delete
                    </a>
                </div>
            </div>
        <% }) %>

    </div>

</div>

</body>
</html>
