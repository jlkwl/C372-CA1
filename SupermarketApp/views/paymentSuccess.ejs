<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Payment Successful</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body { background:#f7f7f7; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width: 850px; margin: 40px auto; }
    .cardx { background:#fff; border-radius: 14px; box-shadow: 0 2px 14px rgba(0,0,0,0.08); padding: 24px; }
  </style>
</head>
<body>
  <%- include('partials/header', { user: user }) %>

  <div class="wrap">
    <div class="cardx text-center">
      <h2 class="fw-bold text-success">âœ“ Payment Successful!</h2>
      <p class="text-muted mb-4">Thank you for your order, <%= user.username || user.email %></p>

      <div class="card border-0 text-start">
        <div class="card-header bg-primary text-white fw-bold">Receipt</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered align-middle">
              <thead class="table-light">
                <tr>
                  <th>Product</th>
                  <th style="width:90px">Qty</th>
                  <th style="width:140px">Unit Price</th>
                  <th style="width:140px">Line Total</th>
                </tr>
              </thead>
              <tbody>
                <% cart.forEach(function(item){ %>
                  <tr>
                    <td><strong><%= item.productName %></strong></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= Number(item.price).toFixed(2) %></td>
                    <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="text-end fs-5 fw-bold">
            Total Paid: $<%= Number(total).toFixed(2) %>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center gap-2 mt-4 flex-wrap">
        <a href="/orders" class="btn btn-secondary">View Order History</a>
        <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
      </div>
    </div>
  </div>
</body>
</html>